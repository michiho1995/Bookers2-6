<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list', book:@book, user:@user %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(book) do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40,  fallback: "no_image.jpg",size: "40x40" %>
                    <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>

                <td>
                  <td id='like-button_<%= book.id %>'>
                  <%= render 'favorites/like-button', book: book %>
                </td>
                <td>
                  <%= render 'book_comments/index', book: book %>
                </td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
