<ol>
    <% book.book_comments.each do |book_comment| %>
      <li class="comment">
        <div class="comment-body bb">
          <div class="comment-avatar">
            <div class="avatar">
              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40,  fallback: "no_image.jpg",size: "40x40" %>
            </div>
          </div>
          <div class="comment-text">
            <div class="comment-author clearfix">
              <a href="#" class="link-author"><%= book_comment.user.name %></a>
            </div>
            <div class="comment-entry"><%= book_comment.comment %></div>
              <% if book_comment.user == current_user %>
            <div>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger", remote: true %>
            </div>
              <% end %>
          </div>
        </div>
      </li>
    <% end %>
</ol>